@model IEnumerable<Category>
<!--Hero Section-->
<div class="hero section">
    <img class="img-fluid" src="~/Images/hero4.jpg">
    <div class="hero-heading">
        <h2 class="hero-heading-text">Let's all Learn and Go Beyond the Horizon</h2>
        <a id="HeroRegisterButton" class="btn btn-outline-warning btn-lg text-light hero-register-button" data-toggle="modal" data-target="#UserRegistrationModal">Register</a>
    </div>
</div>

<hr class="section-divider" />

<!--Courses Section-->
<div id="Courses" class="courses section">
    <h3 class="section-header"><i class="fas fa-laptop-code mr-2 text-info"></i>Courses</h3>
    @{
        const int itemsPerRow = 4;

        var count = Model.Count() / itemsPerRow;
        var catList = new List<Category>();

    }
    @for (int i = 0; i <= count; i++)
    {
        catList = Model.Skip(i * itemsPerRow).Take(itemsPerRow).ToList();

        <partial name="_DisplayCardRowPartial" model="catList"/>

    } 
</div>

<hr class="section-divider" />

<!--Contact Us Section-->

<div id="ContactUs" class="contact-us section">
    <h3 class="col-md-5 section-header"><i class="fas fa-phone-alt mr-2 text-info"></i>Contact Us</h3>
    <div class="col-md-5">
        Email us any questions or inquiries or call +254712345678. We would be happy to answer your questions and set up a meeting with you.
    </div>
    <div class="mt-3 row">
        <div class="col col-md-6">
            <form>
                <input type="hidden" />
                <div class="form-group">
                    <label for="Name" class="control-label">Name: </label>
                    <input id="Name" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Email" class="control-label">Email: </label>
                    <input id="Email" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="Subject" class="control-label">Subject: </label>
                    <input id="Subject" class="form-control" />

                </div>
                <div class="form-group">
                    <label for="MessageBody" class="control-label">Message: </label>
                    <textarea id="Messagebody" cols="30" rows="10" class="form-control"></textarea>

                </div>
                <div class="form-group d-flex">
                    <input type="button" value="Send Email" class="btn btn-outline-info ml-auto" />
                </div>
            </form>
        </div>
        
        <div id="map-container-google-1" class="col col-md-6 z-depth-1-half map-container">
                <iframe src="https://maps.google.com/maps?q=nairobi&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0"
                        style="border: 0; height: 100%; width: 100%" allowfullscreen></iframe>
            </div>
        
    </div>
</div>
<hr class="section-divider" />

<!--About Us Section-->

<div id="AboutUs" class="about-us section">
    <h3 class="col-md-5 section-header"><i class="fas fa-chalkboard-teacher mr-2 text-info"></i>About Us</h3>
    <div class="mt-3 row">
        <div class="col col-md-6">
            <p>
                <strong>OLP</strong> is an online learning platform that offers thousands of free online courses.
            </p>

           <img src="~/Images/olp.png" style="height:50%; width:100%" />

        </div>
        <div class="col col-md-6">

            <h3 class="section-header text-info ml-3"><i class="fa-solid fa-align-center text-info mr-2 "></i>Mission</h3>
            <p>
                Our Mission is to Provide Various Learning Materials to help the learner gain skills in their area of interest.
            </p>

            <h3 class="section-header text-info ml-3"><i class="fas fa-rocket mr-2 text-info"></i>Vision</h3>
            <p>
                Our Vision is to become the number one leading online learning platform in East Africa
            </p>
        </div>
    </div>
</div>
